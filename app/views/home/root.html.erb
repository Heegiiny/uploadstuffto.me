<div class="pure-g-r">
  <div class="pure-u">
    <div class="l-box">
      <h1>uploadstuffto.me</h1>
      <p>This is an image hosting site. Only registered users may upload.</p>
      <%= render template: 'images/new' if user_signed_in? %>
    </div>
  </div>

  <% if user_signed_in? %>
    <div class="pure-u" id="my_recent_uploads">
      <%= render 'images/tiles', :locals => { :images => @recently_uploaded } %>
    </div>
  <% end %>
</div>