<div class="l-box">
  <h1>
    Viewing albums by
    <%= (@user) ? link_to(@user.username, @user) : 'everyone' %>.
  </h1>
</div>

<div class="pure-u-1 tiles">
  <div class="l-box">
    <% @albums.each do |album| %>
      <%= link_to album do %>
        <div class="tile" id="tile_<%= album.key %>">
          <% unless album.images.empty? %>
            <%= image_tag(album.images.first.file.url(:thumb), class: 'float-left pure-hidden-phone') unless album.images.empty? %>
            <%= image_tag(album.images.first.file.url(:thumb), class: 'float-left small-img pure-hidden-tablet pure-hidden-desktop') unless album.images.empty? %>
          <% end %>
          <div class="l-box float-left">
            <h3><%= album.title.empty? ? 'Untitled album' : album.title %></h3>
            <p><%= pluralize(album.images.count, 'image') %></p>
            <p>Created <%= album.created_at %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>