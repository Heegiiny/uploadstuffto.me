<div class="l-box">
  <h2>Log in</h2>

  <%= form_for(resource,
               :as => resource_name,
               :url => session_path(resource_name),
               :html => {:class => 'pure-form'}) do |f| %>
    <p><%= f.label :email %><br />
    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email' %></p>

    <p><%= f.label :password %><br />
    <%= f.password_field :password, :placeholder => 'Password' %></p>

    <% if devise_mapping.rememberable? -%>
      <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
    <% end -%>

    <p><%= f.submit("Sign in", :class => 'pure-button pure-button-primary') %></p>
  <% end %>

  <p><%= render "devise/shared/links" %></p>
</div>